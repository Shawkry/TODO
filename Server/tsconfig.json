{
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*","bin/*"]
    },
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*","bin/*"]
      }
    }
  }
}